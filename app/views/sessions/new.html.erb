<div class="login-page">

  <div class="logo-container">
    <img class="logo" src="<%= image_path('logo2.png') %>" />
  </div>

  <div class="login-form">

    <form class="group" action="<%= session_url %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <input type="text" class="username-login" name="user[email]" placeholder="Email">
      <input type="password" class="password-login" name="user[password]" placeholder="Password">
      <button class="login-button">Log In</button>

    </form>

    <a href="<%= new_user_url %>" class="create-account-link">Create an Account</a>
  </div>

</div>
